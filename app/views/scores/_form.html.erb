<%= form_with(model: score, class: "contents") do |form| %>
  <% if score.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul class="list-disc ml-6">
        <% score.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :judge_id %>
    <%= form.text_field :judge_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": score.errors[:judge_id].none?, "border-red-400 focus:outline-red-600": score.errors[:judge_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :heat_id %>
    <%= form.text_field :heat_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": score.errors[:heat_id].none?, "border-red-400 focus:outline-red-600": score.errors[:heat_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :person_id %>
