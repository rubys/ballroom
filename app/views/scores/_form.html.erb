  </div>

  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_field :comments, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": score.errors[:comments].none?, "border-red-400 focus:outline-red-600": score.errors[:comments].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :slot %>
