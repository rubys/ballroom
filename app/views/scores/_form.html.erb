  </div>

  <div class="my-5">
    <%= form.label :value %>
    <%= form.text_field :value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": score.errors[:value].none?, "border-red-400 focus:outline-red-600": score.errors[:value].any?}] %>
  </div>

  <div class="my-5">
